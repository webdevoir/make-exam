
<div class="landing-image-login">



<div class="login_container">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">

      <!--<%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "email" %> -->
      <%= f.text_field :login, autofocus: true, autocomplete: "username", placeholder: "email or username" %>
    </div>

    <div class="field">

      <%= f.password_field :password, autocomplete: "off", placeholder: "password" %>
    </div>

    <!-- <% if devise_mapping.rememberable? -%>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end -%>

  -->

    <div class="actions">
      <%= f.submit "Log in", class: "exam_button", id: "login_button" %>
      Not registered? <%= link_to "Create an account", new_user_registration_path %>
    </div>
  <% end %>



</div>
</div>
